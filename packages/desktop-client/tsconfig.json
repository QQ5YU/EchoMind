{
  "compilerOptions": {
    "target": "ESNext",
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": [
        "../backend/src/*"
      ],
      "@backend-core/*": [
        "../backend/src/core/*"
      ],
      "@core": [
        "../backend/src/core"
      ],
      "@core/*": [
        "../backend/src/core/*"
      ],
      "@auth": [
        "../backend/src/auth"
      ],
      "@auth/*": [
        "../backend/src/auth/*"
      ],
      "@transcripts": [
        "../backend/src/transcripts"
      ],
      "@transcripts/*": [
        "../backend/src/transcripts/*"
      ],
      "@ai": [
        "../backend/src/ai"
      ],
      "@ai/*": [
        "../backend/src/ai/*"
      ],
      "@user": [
        "../backend/src/user"
      ],
      "@user/*": [
        "../backend/src/user/*"
      ],
      "@audio": [
        "../backend/src/audio"
      ],
      "@audio/*": [
        "../backend/src/audio/*"
      ],
      "@folders": [
        "../backend/src/folders"
      ],
      "@folders/*": [
        "../backend/src/folders/*"
      ],
      "@search": [
        "../backend/src/search"
      ],
      "@search/*": [
        "../backend/src/search/*"
      ],
      "@settings": [
        "../backend/src/settings"
      ],
      "@settings/*": [
        "../backend/src/settings/*"
      ],
      "@echomind/shared": [
        "../shared/src"
      ],
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@app/*": [
        "src/renderer/app/*"
      ],
      "@pages/*": [
        "src/renderer/pages/*"
      ],
      "@features": [
        "src/renderer/features"
      ],
      "@features/*": [
        "src/renderer/features/*"
      ],
      "@widgets": [
        "src/renderer/widgets"
      ],
      "@widgets/*": [
        "src/renderer/widgets/*"
      ],
      "@entities": [
        "src/renderer/entities"
      ],
      "@entities/*": [
        "src/renderer/entities/*"
      ],
      "@shared": [
        "src/renderer/shared"
      ],
      "@shared/*": [
        "src/renderer/shared/*"
      ],
      "@shared-core/": [
        "src/shared/"
      ],
      "@shared-core/*": [
        "src/shared/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "electron.vite.config.ts"
  ]
}