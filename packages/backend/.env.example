# Backend environment sample for development
# Copy to .env and fill values as needed

# Use SQLite file by default for local dev
DATABASE_URL="file:./dev.db"

# JWT settings
JWT_SECRET="change_me"
JWT_EXPIRATION="1h"
JWT_REFRESH_SECRET="change_me"
JWT_REFRESH_EXPIRATION="7d"

# Redis (used for queues/jobs) - for local dev, you can run Redis or keep defaults
REDIS_HOST="localhost"
REDIS_PORT="6379"

# Server port
PORT=3000

# Notes:
# - For production, replace secrets and use a proper DB (e.g. PostgreSQL) and set DATABASE_URL accordingly.
# - Do NOT commit real secrets to the repo.
