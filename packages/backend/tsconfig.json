{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@generated/*": [
        "generated/*"
      ],
      "@auth": [
        "auth"
      ],
      "@auth/*": [
        "auth/*"
      ],
      "@user": [
        "user"
      ],
      "@user/*": [
        "user/*"
      ],
      "@audio": [
        "audio"
      ],
      "@audio/*": [
        "audio/*"
      ],
      "@folders": [
        "folders"
      ],
      "@folders/*": [
        "folders/*"
      ],
      "@search": [
        "search"
      ],
      "@search/*": [
        "search/*"
      ],
      "@settings": [
        "settings"
      ],
      "@settings/*": [
        "settings/*"
      ],
      "@transcripts": [
        "transcripts"
      ],
      "@transcripts/*": [
        "transcripts/*"
      ],
      "@ai": [
        "ai"
      ],
      "@ai/*": [
        "ai/*"
      ],
      "@core": [
        "core"
      ],
      "@core/*": [
        "core/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*",
    "storage/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}