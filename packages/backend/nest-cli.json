{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "builder": "tsc",
    "plugins": [
      "@nestjs/swagger"
    ],
    "assets": [
      {
        "include": "../storage/**/*",
        "outDir": "./dist/storage"
      }
    ],
    "watchAssets": true
  }
}