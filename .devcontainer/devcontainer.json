{
  "name": "EchoMind Dev Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "forwardPorts": [5173, 3000, 3001],
  "portsAttributes": {
    "3000": {
      "label": "Backend Server",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Backend API Documentation",
      "onAutoForward": "openBrowser"
    },
    "5173": {
      "label": "Frontend Renderer",
      "onAutoForward": "openBrowser"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {} // install git if not already in image
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "mhutchie.git-graph",
        "EditorConfig.EditorConfig",
        "ms-python.python"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "terminal.integrated.defaultProfile.linux": "bash",
        "npm.packageManager": "pnpm"
      }
    }
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/EchoMind,type=bind"
}
