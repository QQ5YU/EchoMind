{
  "name": "echomind",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "start": "pnpm --filter backend start:dev & pnpm --filter desktop-client dev:web",
    "backend:dev": "pnpm --filter backend start:dev",
    "backend:build": "pnpm --filter backend build",
    "client:dev": "pnpm --filter desktop-client dev",
    "client:build": "pnpm --filter desktop-client build",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-builder",
      "esbuild",
      "electron-winstaller"
    ],
    "ignoredBuiltDependencies": [
      "better-sqlite3",
      "prisma"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.1",
    "prisma": "^6.19.1"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "joi": "^18.0.2"
  }
}
